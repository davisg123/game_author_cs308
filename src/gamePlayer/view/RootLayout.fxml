<BorderPane fx:id="background" prefWidth="1000.0" prefHeight="1000.0" 
	xmlns:fx="http://javafx.com/fxml">
    <top>
    	<Label text="Game Player GUI"/>
    	<MenuBar fx:id="menuBar"> 
    		<menus>
    			<Menu text="Options">
    				<items>
    					<MenuItem text="New"/>
    					<MenuItem text="Load"/>
    					<MenuItem text="Save"/>
    					<MenuItem text="Pause"/>
    					<MenuItem text="Quit"/> 
    				</items>
    			</Menu> 
    			<Menu text="Preferences">
    				<items>
    					<MenuItem text="Sound"/>
    					<MenuItem text="KeyCombos"/>    				
    				</items>
    			</Menu>
    		</menus>
    	</MenuBar>
    </top>
    <center>
    	<VBox fx:id="canvasVBox" styleClass = "segmented-button-bar" 
    		style="-fx-border-width: 1; -fx-border-style: solid; -fx-spacing: 5.0"
    		prefWidth="1000" prefHeight="700">
    	</VBox>
    </center>
    <bottom>
    	<VBox fx:id="statsVBox" style="-fx-border-width: 1; -fx-border-style: solid;" prefWidth="1000" prefHeight="250">
    		<Label text="Game Stats"/>
    	</VBox>
    </bottom>
     
</BorderPane>


